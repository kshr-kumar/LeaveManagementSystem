@model LMMS.UI.Models.ApplyLeaveViewModel

@{
    ViewData["Title"] = "Leave";
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert('@TempData["ErrorMessage"]');
    </script>
}

@if (TempData["Success"] != null)
{
    <script>
        alert('@TempData["Success"]');
    </script>
}

@if (TempData["leavebalance"] != null)
{
    <script>
        alert('@TempData["leavebalance"]');
    </script>
}

<h4>ApplyLeave </h4>
<hr />



<div class="row">
    <div class="col-md-4">
        <form asp-action="Leave">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input type="hidden" asp-for="EmployeeLeaveId" class="form-control" />
               
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class="form-control" asp-items=@(new SelectList(ViewBag.LeaveTypes, "LeaveTypeId", "LeaveTypeName")) > 
                    <option value="">--- select ---</option>

                </select>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <br />
         



            <div class="form-group">
                <label asp-for="LeaveStartDate" class="control-label"></label>
                <input type="date" asp-for="LeaveStartDate" class="form-control" />
                <span asp-validation-for="LeaveStartDate" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <label asp-for="LeaveEndDate" class="control-label"></label>
                <input type="date" asp-for="LeaveEndDate" class="form-control" />
                <span asp-validation-for="LeaveEndDate" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

